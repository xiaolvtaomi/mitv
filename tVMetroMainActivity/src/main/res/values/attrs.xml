<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="HorizontalListview">
        <attr name="width" format="dimension" />
        <attr name="height" format="dimension" />
        <attr name="item_width" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="TextViewWithTTF">
        <attr name="ttf_name" format="string" />
    </declare-styleable>
    <declare-styleable name="MyGiftView">
        <attr name="auto_play" format="boolean"></attr>
        <attr name="gifSrc" format="reference"></attr>
    </declare-styleable>
    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>


        <declare-styleable name="FlashView">
            <attr name="effect">
                <enum name="accordion" value="0"/>
                <enum name="cube" value="1"/>
                <enum name="def" value="2"/>
                <enum name="depthPage" value="3"/>
                <enum name="inRightDown" value="4"/>
                <enum name="inRightUp" value="5"/>
                <enum name="rotate" value="6"/>
                <enum name="zoomOutPage" value="7"/>

            </attr>
        </declare-styleable>


    <declare-styleable name="DownloadProgressButton">
        <attr name="radius" format="float"/>
        <attr name="backgroud_color" format="color"/>
        <attr name="backgroud_second_color" format="color"/>
        <attr name="text_color" format="color"/>
        <attr name="text_covercolor" format="color"/>
        <attr name="backgroud_strokeWidth" format="dimension"/>
        <attr name="text_normal" format="string"/>
        <attr name="text_downing" format="string"/>
        <attr name="text_pause" format="string"/>
        <attr name="text_finish" format="string"/>
        <attr name="animation_duration" format="integer"/>
    </declare-styleable>

</resources>