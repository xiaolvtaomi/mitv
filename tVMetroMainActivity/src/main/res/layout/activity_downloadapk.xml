<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tv.ui.metro.view.Downloadapk">
<ImageView
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:id="@+id/apk_picture"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="30dp"
    android:background="@drawable/defeat"
    android:layout_marginRight="30dp"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/progress"
        android:layout_below="@+id/apk_picture"
        android:textColor="#ffffff"
        android:text="下载"
        android:textSize="35sp"
        android:gravity="center"
        android:background="#76EEC6"/>
    <Button
        android:id="@+id/phone_apk"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:text="手机客户端下载"
        android:textSize="35sp"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/apk_picture"
        android:layout_marginLeft="30dp"
        android:drawableTop="@drawable/defeat"
        >
    </Button>

</RelativeLayout>
